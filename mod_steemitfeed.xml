				<field 
					name="moduleclass_sfx" 
					type="text" 
					default=""
					label="MOD_STEEMITFEED_CONFIG_FIELD_MODULE_CLASS_SUFFIX_LABEL"
					description="MOD_STEEMITFEED_CONFIG_FIELD_MODULE_CLASS_SUFFIX_DESC" 
