					label="MOD_STEEMITFEED_CONFIG_FIELD_FEED_EXCLUDE_POSTS_LABEL"
					description="MOD_STEEMITFEED_CONFIG_FIELD_FEED_EXCLUDE_POSTS_DESC" 
					rows="5"
				/>
				
