				/>
				
				<field 
					name="feed_tags_exclude"
					type="textarea" 
					default=""
					label="MOD_STEEMITFEED_CONFIG_FIELD_FEED_EXCLUDE_TAGS_LABEL"
					description="MOD_STEEMITFEED_CONFIG_FIELD_FEED_EXCLUDE_TAGS_DESC" 
